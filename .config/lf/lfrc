# Show hidden files (dotfiles)
set hidden

# Sort files in natural order (so “2” comes before “10”)
set sort natural

# Enable file previews in the preview pane (if you have a previewer configured)
set preview true

# Use 'bat' for file previews (ensure bat is installed)
set previewer bat --style=numbers --color=always --line-range :500 {}

# Optionally, ignore case in file names when sorting
set ignorecase

